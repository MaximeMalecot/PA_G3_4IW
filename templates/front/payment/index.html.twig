{% extends 'base_front.html.twig' %}

{% block title %}Crédits{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1 class="name-page">Acheter des crédits</h1>
    <div>
        {{ include('front/payment/_form.html.twig') }}
        <div class="container-credit">
            {% for paymentAmout in amounts %}
                <div class="cat-credit">
                    <div class="block">
                    <div class="card-title">
                            <label for="credit">{{paymentAmout}} crédits</label>
                        </div>
                        <div class="card-text">
                            <label for="price">{{paymentAmout / 10 }}€</label>
                        </div>
                        <div class="btn-credit">
                            <a href='/payment/{{paymentAmout}}' class="btn btn-danger">Acheter</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets%}
    {{ parent() }}
<style>
.container-credit {
  
   display:flex;
   flex-direction:row;
   flex-wrap: wrap;
   
}
.cat-credit {
    
    background-color: #FFFFFF;
    box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;
    color: #000000;
    margin: 30px;
    padding:25px;
    border-radius: 8px;
    width:25%;
}
h2{
    font-size: 25px;
}
.name-page {
    display: flex;
    font-size: 50px;
    font-weight: bold;
    color: #fff;
    margin:25px;
}
.block {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 20px;
}
.card-title {   
    font-weight: bold;
    color: #000;
}
.btn-credit{
    margin-top: 20px;
}
label {
    font-size: 19px;
    color: #000;
}
</style>
{% endblock %}