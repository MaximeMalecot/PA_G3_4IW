{% block title %}Accueil{% endblock %}


{% block stylesheets %}
<style>
        body{
            background: #000000 !important;
            color: #fff;
        }

      
        .banner-img{
            opacity:0.5;
        }
        
        h1{
            font-weight: bold !important;
            font-size: 35px;
            margin-bottom: 30px;
        }

        .banner{
            position:relative;
            height:620px;
        }

        .banner img{
            width:100%;
            height:620px;
        }
        
        .banner-text{
            position:absolute;
            bottom:0;
            margin-bottom:5%;
            width:100%;
            text-align:center;
            font-size:2em;
            font-weight:bold;
        }

        .banner-btn{
            position:absolute;
            top:0;
            right:0;
            margin-right:5%;
            margin-top:3%;
        }

        .banner-title{
            color:white;
            font-style: bold !important;
            font-size: 45px;
            margin-bottom: 150px;
        }

     

        .cta-button{
           
            margin-top:50px;
        }

        hr{
            margin: 0px 50px;
        }

        .section2{
            height:200px;
           
        }

        .section1{
            margin-top:8%;
            margin-bottom:8%;
        }
</style>
{% endblock %}

