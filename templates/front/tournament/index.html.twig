{% extends 'base_front.html.twig' %}

{% block title %}Les tournois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les tournois</h1>
    <label for="filter">Status</label>
    <form id="filter" action="{{ path('front_tournament_index') }}" method="POST">
        <select id="status" name="status">
            {% if is_granted('ROLE_FIGHTER') or is_granted('ROLE_ADJUDICATE') %}
                <option value="CREATED" id="CREATED">CREER</option>
            {% endif %}
            <option value="AWAITING" id="AWAITING" { status.value == "AWAITING" ?? selected : null }>EN ATTENTE</option>
            <option value="STARTED" id="STARTED">EN COURS</option>
            <option value="ENDED" id="ENDED">FINIS</option>
        </select>
        <input type="hidden" name="_token" value="{{ csrf_token('tournamentFilter') }}">
    </form>
    {% if tournaments is defined %}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Arbitre</th>
                <th>Nombre de combattants</th>
                <th>date</th>
                {% if is_granted('ROLE_FIGHTER') %}
                    <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for tournament in tournaments %}
                <tr>
                        <th><a href="{{ path('front_tournament_show', {'id': tournament.id}) }}">{{ tournament.name }}</a></th>
                        <th>{{ tournament.createdBy.nickname ?? "null" }}</th>
                        <th>{{ getNbFromRole(tournament, 'ROLE_FIGHTER')}} / {{tournament.nbMaxParticipants}}</th>
                        <th>{{ tournament.dateStart|date('d-m-Y H:i:s') }}</th>
                        <th>
                        {% if app.user %}
                        {% if canQuit(tournament, app.user) %}
                            {{ include('front/tournament/_quit_form.html.twig') }}
                        {% endif %}
                        {% if canJoin(tournament, app.user) %}
                            {{ include('front/tournament/_join_form.html.twig') }}
                        {% endif %}
                        {% endif %}
                        </th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
</div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded',  function() {
        var select = document.getElementById('status');
        {{status}}.selected = 'selected';
        var instances = M.FormSelect.init(select);
        let form = document.getElementById('filter');
        form.addEventListener("change", async() => {
            let url = "{{ path('front_tournament_index', {'status': 'statusValue'})|escape('js') }}";
            url = url.replace('statusValue', select.value);
            window.location.href = url;
        });
    });
</script>
{% endblock %}
