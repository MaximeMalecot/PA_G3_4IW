{% extends 'base_front.html.twig' %}

{% block title %}Les tournois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les tournois</h1>
    <label for="filter">Status</label>
    <form id="filter" action="{{ path('front_tournament_index') }}" method="POST">
        <select id="status" name="status">
            <option value="AWAITING" id="AWAITING" {{ status is same as "AWAITING" ? "selected" : "" }}>EN ATTENTE</option>
            <option value="STARTED" id="STARTED">EN COURS</option>
            <option value="ENDED" id="ENDED">FINIS</option>
        </select>
        <input type="hidden" name="_token" value="{{ csrf_token('tournamentFilter') }}">
    </form>
    {% if tournaments is defined %}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Arbitre</th>
                <th>Nombre de combattants</th>
                <th>date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tournament in tournaments %}
                <tr>
                        <th><a href="{{ path('front_tournament_show', {'id': tournament.id}) }}">{{ tournament.name }}</a></th>
                        <th>{{ tournament.createdBy.nickname ?? "null" }}</th>
                        <th>{{ tournament.nbMaxParticipants }}</th>
                        <th>{{ tournament.dateStart|date('d-m-Y H:i:s') }}</th>
                        <td><a href="{{ path('front_bet_tournament_create', {'id': tournament.id}) }}" class="waves-effect waves-light btn">Parier</a></td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded',  function() {
            {{status}}.selected = 'selected';
            let form = document.getElementById('filter');
            form.addEventListener("change", async() => {
                form.submit();
            });
        });

    </script>
{% endblock %}
