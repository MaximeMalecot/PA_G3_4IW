{% extends 'base_front.html.twig' %}

{% block title %}Les combats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Défiez un compétiteur</h1>
    
</div>


  <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for fighter in fighters %}
            <tr>
                <td>{{ fighter.id }}</td>
                <td>{{ fighter.nickname }}</td>
                <td><a href="{{ path('trial_challenge', {'id': fighter.id}) }}">Défier</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
