<form method="post" action="{{ path('back_trial_end', {'id': trial.id}) }}">
    <p class="fw-bold fs-5">Mettre fin au combat</p>
    <label for="fighter" class="form-label">Combattant</label>
    <select id="fighter" name="fighter" class="form-select" required>
        <option value="default" disabled selected>---</option>
        {% for fighter in trial.fighters %}
            <option value={{fighter.id}}>{{fighter.nickname}}</option>
        {% endfor %}
    </select>
    <label for="victoryType" class="form-label">Type de victoire</label>
    <select id="victoryType" name="victoryType" class="form-select" required>
        <option value="default" disabled selected>---</option>
        {% for type in victoryTypes %}
            <option value={{type}}>{{type}}</option>
        {% endfor %}
    </select>
    <input type="hidden" name="_token" value="{{ csrf_token('endTrial' ~ trial.id) }}">
    <button type="submit" class="btn btn-bettle mt-3">Fin</button>
</form>
