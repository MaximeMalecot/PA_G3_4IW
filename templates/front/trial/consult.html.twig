{% extends 'base_front.html.twig' %}

{% block title %}Les combats{% endblock %}

{% block stylesheets %}
<style>
    .block {
        display: flex;
        overflow-x: scroll;

    }

    .challenge {
        display: flex;
    }
</style>
{% endblock %}

{% block body %}

<div class="container pt-4">
    <div class="d-flex mb-4">
        <h1 class="flex-shrink-0">Matchs</h1>
        <p class="flex-grow-1 ms-2 m-auto fs-5">- Mes matchs Ã  venir<p>
    </div>
    <div class="">
        <h1>Les combats en attente</h1>
        <table id="nextTrials" name="nextTrials">
            <thead>
                <tr>
                    <th>Arbitre</th>
                    <th>Combattants</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="nextTrials_data">
            {% if nextTrials is defined and nextTrials is not empty %}
                {% for trial in nextTrials %}
                    <tr>
                        <th>{{ trial.adjudicate.nickname ?? "null" }}</th>
                        <th>{{ trial.fighters[0].nickname ?? "null" }} vs {{ trial.fighters[1].nickname ?? "null" }}</th>
                        <th>{{ trial.dateStart|date('d-m-Y H:i:s') }}</th>
                        <th>{{ trial.status }}</th>
                        <th>
                        {% if trial.status == "CREATED" or (trial.status == "DATE_ACCEPTED" and trial.updatedBy.id != app.user.id) %}
                            {{ include('front/trial/_accept_form.html.twig') }}
                            {{ include('front/trial/_reject_date_form.html.twig') }}
                        {% endif %}
                            {{ include('front/trial/_reject_form.html.twig') }}
                        </th>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    
        <h1>Les challenges en attente</h1>
        <div class="block">
           
            <div>
                <div class="challenge">

                {% if nextChallenges is defined and nextChallenges is not empty %}
                {% for trial in nextChallenges %}
                <div class="card mr-4 mt-4 me-4 shadow-sm " style="width:18rem;">
                    <div class="card-body">
                        <p>{{ trial.adjudicate.nickname ?? "null" }}</p>
                        <p>{{ trial.fighters[0].nickname ?? "null" }} vs {{ trial.fighters[1].nickname ?? "null" }}</p>
                        <p>{{ trial.dateStart|date('d-m-Y H:i:s') }}</p>
                        <p>{{ trial.status }}</p>
                        <p>
                            {% if trial.status == "CREATED" and trial.createdBy.id != app.user.id %}
                                {{ include('front/trial/_accept_challenge_form.html.twig') }}
                                {{ include('front/trial/_reject_challenge_form.html.twig') }}
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% endfor %}
                {% endif %}
                   
                </div>
            </div>
        </div>
   

    
    <div class="">
    <h1>Les autres combats</h1>
        <table id="others" name="previous">
            <thead>
                <tr>
                    <th>Arbitre</th>
                    <th>Combattants</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="others_data">
            {% if trials is defined and trials is not empty %}
                {% for trial in trials %}
                    <tr>
                        <th>{{ trial.adjudicate.nickname ?? "null" }}</th>
                        <th>{{ trial.fighters[0].nickname ?? "null" }} vs {{ trial.fighters[1].nickname ?? "null" }}</th>
                        <th>{{ trial.dateStart|date('d-m-Y H:i:s') }}</th>
                        <th>{{ trial.status }}</th>
                        <th>
                        {% if trial.status == "AWAITING" and trial.dateStart is defined and trial.dateStart is not null and date() < limitRefuseDelete(trial.dateStart)%}
                            {{ include('front/trial/_reject_form.html.twig') }}
                        {% endif %}
                        </th>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
<script>

$(document).ready( function () {
    $('#nextTrials').DataTable();
    $('#nextChallenges').DataTable();
    $('#others').DataTable();
} );
</script>
{% endblock %}
