{% extends 'base_front.html.twig' %}

{% block title %}Les combats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les combats</h1>
    <form id="filter" action="{{ path('front_trial_index') }}" method="POST">
        <label for="status">Status</label>
        <select id="status" name="status">
            <option value="AWAITING" id="AWAITING" {{ status is same as "AWAITING" ? "selected" : "" }}>EN ATTENTE</option>
            <option value="STARTED" id="STARTED">EN COURS</option>
            <option value="ENDED" id="ENDED">FINIS</option>
        </select>
    </form>
    <table>
        <thead>
            <tr>
                <th>arbitre</th>
                <th>combattants</th>
                <th>date</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody id="trial_data">
        {% if trials is defined and trials is not empty %}
            {% for trial in trials %}
                <tr>
                    <th>{{ trial.adjudicate.nickname ?? "null" }}</th>
                    <th>{{ trial.fighters[0].nickname ?? "null" }} vs {{ trial.fighters[1].nickname ?? "null" }}</th>
                    <th>{{ trial.dateStart|date('d-m-Y H:i:s') }}</th>
                    {% if status is same as "AWAITING" %}
                    <td><a href="{{ path('front_bet_trial_create', {'id': trial.id}) }}" class="waves-effect waves-light btn">Parier</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded',  function() {
        const select = document.getElementById('status');
        {{status}}.selected = 'selected';
        let form = document.getElementById('filter');
        form.addEventListener("change", async() => {
            let url = "{{ path('front_trial_index', {'status': 'statusValue'})|escape('js') }}";
            url = url.replace('statusValue', select.value);
            window.location.href = url;
        });
    });
</script>
{% endblock %}
