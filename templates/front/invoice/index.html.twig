{% extends 'base_front.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>User {{ invoices[0].buyer.nickname   }}! âœ…</h1>

    <table>
        <thead>
            <tr>
                <th>credit</th>
                <th>price</th>
                <th>paypal_id</th>
                <th>date</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <th>{{ invoice.creditAmount }}</th>
                <th>{{ invoice.price }}</th>
                <th>{{ invoice.idPaypal }}</th>
                <th>{{ invoice.createdAt|date('d-m-Y H:i:s') }}</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
