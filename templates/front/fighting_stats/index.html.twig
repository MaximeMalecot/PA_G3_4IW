{% extends 'base_front.html.twig' %}

{% block title %}Le ladder{% endblock %}

{% block body %}
    <table>
        <tr>
            <th>rank</th>
            <th>user</th>
            <th>points</th>
            <th>victories</th>
            <th>defeats</th>
            {% if is_granted('ROLE_FIGHTER') %}
                <th>action</th>
            {% endif %}
        </tr>
        {% for stat in fs %}
            <tr>
                <td>{{ stat.rank }}</td>
                <td><a href="{{ path('front_user_show', {'id': stat.getTarget().id}) }}">{{ stat.getTarget().nickname }}</a></td>{# emmene au profil du fighter#}
                <td>{{ stat.rankingPoints }}</td>
                <td>{{ stat.victories }}</td>
                <td>{{ stat.defeats }}</td>
                {% if is_granted('ROLE_FIGHTER') %}
                    <th>
                        {% if canChallenge(app.user, stat.getTarget()) %}
                            {% set fighter = stat.getTarget() %}
                            {{ include('front/user/_challenge_form.html.twig') }}
                        {% elseif app.user.id != stat.getTarget().id %}
                            Challenge already waiting
                        {% endif %}
                    </th>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
