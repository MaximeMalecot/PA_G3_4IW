{% extends 'base_front.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>User {{user.nickname}}</h1>
    {% if app.user == user %}
    <h2>Credits {{user.credits}}</h2>
    {% endif %}
    <h2>Edit User</h2>

    {{ include('front/user/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('front_user_pwd_edit', { 'id': user.id }) }}">change password</a>

    {{ include('front/user/_delete_form.html.twig') }}

    <a href="{{ path('front_user_index') }}">back to list</a>

</div>
{% endblock %}
