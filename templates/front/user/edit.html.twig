{% extends 'base_front.html.twig' %}

{% block title %}Votre compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
            .pseudo-label{
                font-size: 1.2em;
                font-weight: bold;
            }

            .credit-label{
                font-size: 1.2em;
                font-weight: bold;
            }

            .card-profile{
                width:80%;
                padding-bottom:5%;
            }

            .pwd{
               color:black;
            }
            .pwd:hover{
               color: #D20A0A;
            }

    </style>
{% endblock %}

{% block body %}
    <div class="container pt-4">
        <div class="d-flex ">
            <h1 class="flex-shrink-0">Gestion de votre compte</h1>
            <p class="flex-grow-1 ms-2 m-auto fs-5">- Modifications de vos informartions personnelles<p>
        </div>
        
        <div class="d-flex justify-content-left mb-7 mt-5">
            <div class="card card-profile shadow-sm ">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        {% if app.user == user %}
                            <div class="credit">
                                <label class="credit-label">Credits:</label> 
                                <label>{{user.credits}}</label>
                            </div>
                            
                        {% endif %}
                            <label>{{user.nickname}}</label>
                    </div>
                    <div>
                        <a href="{{ path('invoice_user', { 'id': user.id }) }}" class="btn btn-bettle">Vos factures</a>
                    </div>
                </div>
                    <h4 class="pt-3">Modifier vos informations</h4>
                    <div class="pb-3">
                        {{ include('front/user/_form.html.twig', {'button_label': 'Modifier'}) }}
                        {{ include('front/user/_delete_form.html.twig') }}
                    </div>
                    
                    <a class="pwd" href="{{ path('front_user_pwd_edit', { 'id': user.id }) }}">Changer de mot de passe</a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

