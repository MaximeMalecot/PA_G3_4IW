{% extends 'base_front.html.twig' %}

{% block title %}Paris de {{ user.nickname }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>User {{ user.nickname }}</h1>
    {% if user.bets is defined and user.bets is not empty %}
        <table>
            <thead>
                <tr>
                    <th>On</th>
                    <th>Amount</th>
                    <th>At</th>
                </tr>
            </thead>
            <tbody>
            {% for bet in user.bets %}
                <tr>
                    {% if bet.getTrial() is not null %}
                        <th>{{ bet.trial.id }}</th>
                    {% elseif bet.getTournament() is not null %}
                        <th>{{ bet.trial.id }}</th>
                    {% else %}
                        <th>EMPTY</th>
                    {% endif %}
                    <th>{{ bet.amount }}</th>
                    <th>{{ bet.createdAt|date('d-m-Y H:i:s') }}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Pas de paris trouv√©s</p>
    {% endif %}
</div>
{% endblock %}
