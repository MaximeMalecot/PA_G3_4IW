{% extends 'base_back.html.twig' %}

{% block title %}Bettle - Edit Trial{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Modifiez la date pour correspondre à l'agenda des combattants</h3>
    </div>
    <div class="card-body">
        {% if trial is defined %}
        <form id="editTrial" action="{{ path('back_trial_modify_date', { id: trial.id}) }}" method="POST">
            <label for="dateStart">Date de début</label>
            <input type="date" class="datepicker" id="dateStart" name="dateStart" placeholder="{{ trial.dateStart|date('d-m-Y') }}" required/>
            <label for="timeStart">Heure de début</label>
            <input type="time" class="timepicker" id="timeStart" name="timeStart" placeholder="{{ trial.dateStart|date('H:i') }}" required/>
            <input type="hidden" name="_token" value="{{ csrf_token('editTrial'~ trial.id ) }}"/>
            <button class="btn btn-primary" type="submit" value="Edit">Edit</button>
        </form>
        {% endif %}
        <div class="card-footer">
            <a href="{{ path('back_trial_index') }}">back to list</a>
        </div>
    </div>
</div>
{% endblock %}
