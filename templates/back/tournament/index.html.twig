{% extends 'base_back.html.twig' %}

{% block title %}Tournament index{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les tournois</h1>
    <label for="filter">Status</label>
    <form id="filter" action="{{ path('back_tournament_index') }}" method="POST">
        <select id="status" name="status">
            <option value="AWAITING" id="AWAITING" { status.value == "AWAITING" ?? selected : null }>EN ATTENTE</option>
            <option value="CREATED" id="CREATED">CREER</option>
            <option value="STARTED" id="STARTED">EN COURS</option>
            <option value="ENDED" id="ENDED">FINIS</option>
        </select>
        <input type="hidden" name="_token" value="{{ csrf_token('tournamentFilter') }}">
    </form>
    <table>
        <thead>
            <tr>
                <th>nom</th>
                <th>arbitre</th>
                <th>nombre de combattants inscrits</th>
                <th>nombre d'arbitre participants</th>
                <th>date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id="tournament_data">
        {% if tournaments is defined and tournaments is not empty %}
            {% for tournament in tournaments %}
                <tr>
                    <th><a href="{{ path('back_tournament_show', {'id': tournament.id}) }}">{{ tournament.name }}</a></th>                    <th>{{ tournament.createdBy.nickname ?? "null" }}</th>
                    <th>{{ getNbFromRole(tournament, 'ROLE_FIGHTER')}} / {{tournament.nbMaxParticipants}}</th>
                    <th>{{ getNbFromRole(tournament, 'ROLE_ADJUDICATE')}} / {{tournament.nbMaxParticipants / 2}}</th>
                    <th>{{ tournament.dateStart ? tournament.dateStart|date('d-m-Y H:i:s') : null }}</th>
                    <th>
                    {% if tournament.status == "CREATED" %}
                        {% if isInTournament(tournament, app.user) %}
                            {{ include('back/tournament/_quit_form.html.twig') }}
                        {% endif %}
                        {% if (is_granted('ROLE_ADJUDICATE') and getNbFromRole(tournament, 'ROLE_ADJUDICATE') < (tournament.nbMaxParticipants / 2)) %}
                            {{ include('back/tournament/_join_form.html.twig') }}
                        {% endif %}
                        {% if canStart(tournament, app.user)%}
                            {{ include('back/tournament/_start_form.html.twig') }}
                        {% endif %}
                    {% endif %}
                    {% if tournament.dateStart is defined and tournament.dateStart is not null %}
                        {% if date() < limitRefuseDelete(tournament.dateStart)%}
                                {{ include('back/tournament/_delete_form.html.twig') }}
                        {% endif %}
                    {% else %}
                        {{ include('back/tournament/_delete_form.html.twig') }}
                    {% endif %}
                    </th>
                </tr>
            {% endfor %}
        {% else %}
            ERROR
        {% endif %}
        </tbody>
    </table>
    <a href="{{ path('back_tournament_new') }}">Create new</a>
</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded',  function() {
        var select = document.getElementById('status');
        {{status}}.selected = 'selected';
        var instances = M.FormSelect.init(select);
        let form = document.getElementById('filter');
        form.addEventListener("change", async() => {
            let url = "{{ path('back_tournament_index', {'status': 'statusValue'})|escape('js') }}";
            url = url.replace('statusValue', select.value);
            window.location.href = url;
        });
    });
</script>
{% endblock %}
