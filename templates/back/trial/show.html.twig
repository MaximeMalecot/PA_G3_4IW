{% extends 'base_back.html.twig' %}

{% block title %}Trial {{trial.id}} {% endblock %}

{% block body %}
    <h1>Trial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trial.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ trial.status }}</td>
            </tr>
            <tr>
                <th>Statut du pari</th>
                <td>{{ trial.betStatus }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ trial.dateStart ? trial.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ trial.dateEnd ? trial.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ trial.createdAt ? trial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ trial.updatedAt ? trial.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_trial_index') }}">Retour à la liste</a>

    {% if trial.status == "DATE_REFUSED" or trial.status == "CREATED"%}
        {{ include('back/trial/_modify_date_form.html.twig') }}
    {% endif %}

    {{ include('back/trial/_delete_form.html.twig') }}
{% endblock %}
