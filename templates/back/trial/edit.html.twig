{% extends 'base_back.html.twig' %}

{% block title %}Bettle - Edit Trial{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Modifiez la date pour correspondre Ã  l'agenda des combattants</h3>
    </div>
    {% if trial is defined %}
        <div class="card-body">
            <form id="editTrial" action="{{ path('back_trial_modify_date', { id: trial.id}) }}" method="POST">
                <label for="dateStart">Date</label>
                <input type="date" class="form-control" id="dateStart" name="dateStart" placeholder="{{ trial.dateStart|date('d-m-Y') }}" required/>
                <label for="timeStart">Heure</label>
                <input type="time" class="form-control" id="timeStart" name="timeStart" placeholder="{{ trial.dateStart|date('H:i') }}" required/>
                <input type="hidden" name="_token" value="{{ csrf_token('editTrial'~ trial.id ) }}"/>
                <button type="submit" class="btn btn-primary" value="Edit">Edit</button>
            </form>
        </div>
        <div class="card-footer">
            <a href="{{ path('back_trial_index') }}">
                <button class="btn btn-secondary">back to list</button>
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
