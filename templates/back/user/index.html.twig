{% extends 'base_back.html.twig' %}

{% block title %}Bettle - Gestion des users{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Gestion des users</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-responsive">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col" class="d-none d-xxl-table-cell">Roles</th>
                    <th scope="col" class="d-none d-xxl-table-cell">Is verified</th>
                    <th scope="col" class="d-none d-lg-table-cell">Nickname</th>
                    <th scope="col" class="d-none d-xxl-table-cell">Twitch Channel</th>
                    <th scope="col" class="d-none d-xxl-table-cell">Credits</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.email }}</td>
                        <td class="d-none d-xxl-table-cell">{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td class="d-none d-xxl-table-cell">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        <td class="d-none d-lg-table-cell">{{ user.nickname }}</td>
                        <td class="d-none d-xxl-table-cell">{{ user.twitchChannel }}</td>
                        <td class="d-none d-xxl-table-cell">{{ user.credits }}</td>
                        <td class="d-flex flex-column gap-2">
                            {{ include('back/user/_show_form.html.twig') }}
                            {{ include('back/user/_edit_form.html.twig') }}
                            {{ include('back/user/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
