<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Blinker:wght@300;400&display=swap" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {% block stylesheets %}
         {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
</head>
<body>
<style>
        body{
            background-color:#e8e9eb;
            font-family: 'Blinker', sans-serif;
        }

        .card-login {
            width: 500px;
        }

        .btn-bettle{
            background-color:#D20A0A;
            color:white;
        }

        .btn-bettle:hover{
            background-color:#6A0903;
            color: white
        }
        nav{
            background-color:#111111;
        }

        nav ul li a {
            color:white !important;
        }
</style>
<nav class="navbar navbar-expand-lg navbar-light navbar-front p-0">
        <div class="container-fluid">
            <a class="navbar-brand m-2" href="/">
                <img src="{{ asset('img/logo.png') }}" alt="logo" width="100" height="50">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="{{ path('front_trial_index') }}">Matchs</a></li>
                    <li class="nav-item"><a class="nav-link active" href="{{ path('front_tournament_index') }}">Tournois</a></li>
                    <li class="nav-item"><a class="nav-link active" href="{{ path('front_fighting_stats_index') }}">Classement</a></li>
                    <li class="nav-item"><a class="nav-link active" href="{{ path('front_user_index') }}">Comp√©titeurs</a></li>
                    {# <li class="nav-item"><a class="nav-link active" href="{{ path('trial_competitors') }}">challenges</a></li> #}
                </ul>
                <ul class="navbar-nav mb-2 mb-lg-0">
                    {% if app.user %}
                        {% if ( is_granted('ROLE_ADMIN') or is_granted('ROLE_ADJUDICATE')) %}
                            <li class="nav-item"><a class="nav-link active" href="{{ path('back_default') }}">administration</a></li>
                        {% else %}
                            {% if is_granted('ROLE_FIGHTER') %}
                                <li class="nav-item"><a class="nav-link active" href="{{ path('front_trial_consult') }}">my trials</a></li>
                            {% endif %}
                        {# 
                            {% if is_granted('ROLE_FIGHTER') and app.user.trials is not empty %}
                                {% for trial in app.user.trials if not break %}
                                    {% if trial.status == "CREATED" %}
                                        <li class="nav-item"><a class="nav-link active" href="{{ path('front_ticket_new') }}"></a></li>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            #}
                            {% if app.user.tickets is defined and app.user.tickets is empty%}
                                <li class="nav-item"><a class="nav-link active" href="{{ path('front_ticket_new') }}">upgrade</a></li>
                            {% elseif app.user.tickets[0].status == "ACCEPTED" %}
                                <li class="nav-item"><a class="nav-link active" href="{{ path('front_user_upgrade', { "id": app.user.id }) }}">change your account</a></li>
                            {% endif %}
                        {% endif %}
                        <li class="nav-item"><a class="nav-link active" href="{{ path('front_user_edit', { "id": app.user.id }) }}">Votre compte</a></li>
                        <li class="nav-item"><a class="nav-link active" href="{{ path('app_logout') }}">logout</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link active" href="{{ path('app_login') }}">Connexion</a></li>
                        <li class="nav-item"><a class="nav-link active" href="{{ path('app_register') }}">Inscription</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>












